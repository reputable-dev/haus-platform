{
  "builds": [
    {
      "src": "backend/hono.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "server": "backend/hono.ts",
        "includeFiles": "dist/**"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/hono.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/index.html"
    }
  ],
  "installCommand": "bun install",
  "buildCommand": "bun run build:web",
  "outputDirectory": "dist",
  "framework": "create-react-app"
}